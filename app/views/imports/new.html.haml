      %th Dec # Trans	
      %th Jan # Trans	
      %th Feb # Trans	
      %th TOTAL
  
  %h3 Schedules
  = f.file_field :schedules_file
 
  %p.text-warning
    The file you upload must look EXACTLY like this

  %table.table.well.table-bordered
    %tr
      %th ID	
      %th Store No.	
      %th University Name	
      %th Winter Spring Finals First	
      %th Winter Spring Finals Last	
      %th Fall Class First	
      %th Fall Finals First	
      %th Fall Finals Last
      
  
  %h3 Summer Schedules
  = f.file_field :summer_schedules_file

  %p.text-warning
    The file you upload must look EXACTLY like this

  %table.table.well.table-bordered
    %tr
      %th Store	
      %th Store Name	
      %th 1st_Classes
      %th 1st_Finals
      %th Last_Finals
      
