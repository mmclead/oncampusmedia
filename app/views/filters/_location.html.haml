.accordian-group
  .accordian-heading
    %h3= link_to 'Filter by Nearby Locations', '#location', { data: {toggle: "collapse", parent: "#filters"}}
    
  #location.accordian-body.collapse
    
    = text_field_tag 'location-filter', nil, :placeholder => 'Enter name of place or address', id: 'location-filter'
    = select_tag 'location-radius', options_for_select([['1 mile', 1609],['5 mile', 8045],['10 miles', 16090], ['20 miles', 32180]])
    = link_to 'Search',  '#location-search', id: 'location-search-button', class: "btn btn-primary"
  .clearfix