.accordian-group
  .accordian-heading
    %h3= link_to 'Filter by Sports', '#sports', { data: {toggle: "collapse", parent: "#filters"}}
  .sport-filter-list
  #sports.accordian-body.collapse
    #all-sports
      = check_box_tag "All Sports", 'all', true
      = label_tag "All Sports", "All Sports"
      
    #sport-list.well
      %ul
        - SPORT_LIST.each do |sport|  
          %li
            = check_box_tag "#{sport}"
            = label_tag "#{sport}", "#{sport.titleize}"
            
    %h4 Filter by Conference
    = render 'filters/conference'
