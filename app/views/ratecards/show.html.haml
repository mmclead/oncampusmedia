  %tr.highlight
    %th= sortable "store_id", "Campus No."
    %th= sortable "school_name", "Campus Name"
    %th= sortable "school_type" "Campus Type"
    %th= sortable "address"
    %th= sortable "city"
    %th= sortable "state",  "ST"
    %th= sortable "dma", "DMA"
    %th= sortable "dma_rank"
    %th= sortable "num_of_screens",  "No. of TVs"
    %th Students Enrolled
    %th Impressions
    %th Cost Per Campus
